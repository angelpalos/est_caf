    height: 100px;

  }

  .boton-status {
    margin-top: 2rem;
    margin-left: 4rem;
    font-family: Arial, Helvetica, sans-ser
  }

  .status {
    position: relative;
    right: 38%;

  }

  .Tproducto {
    position: relative;
    right: 10%;
  }

  tbody.detalle {

    position: relative;
    left: 12%;
    margin-top: 5rem;

  }

  tbody {
    font-family: Arial, Helvetica, sans-serif;
    position: relative;
    right: 10%;
    margin-bottom: 2rem;
  }




  .contenedor-qr {
    width: 250px;
    height: 300px;

    background-color: #ffff;
    position: fixed;

