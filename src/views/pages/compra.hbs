<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
</head>
<body>
  <div class="card" style="width: 40rem; margin-top:  2rem;">
    <img src="https://cdn-icons-png.flaticon.com/512/2734/2734039.png" class="rounded mx-auto d-block" alt="..."
      width="300" height="200">
    <div class="card-body">
      <h5 class="card-title fs-1 text-center">Ticket de Compra</h5>
      <hr>

    </div>
    <table class="table-fixed w-full">
      <thead>

      </thead>
      <tr>
        <th class="px-2"></th>

        <th scope=" " class="fs-3 ">Status</th>

        <th scope=" " class="fs-3 ">Producto</th>

        <th scope=" " class="fs-3 ">Cantidad</th>

        <th scope=" " class="fs-3 ">Precio</th>
      </tr>
      <tbody class="detalle">
        {{#each ped}}
        <tr>
          <!--obtiene la informacion de la base de datos y la imprime en la tabla-->
          <td class="text-center fs-4 py-2">{{tip_status}}</td>
          <td class="text-center fs-4 px-1">{{name}}</td>

          <!--boton para eliminar producto con metodo delete-->

          <!--muestra la cantidad de unidades hay en el carrito-->
          <td class="text-center fs-4">{{cantidad}}</td>
          <!--muestra el costo del producto-->
          <td class="text-center fs-4">{{precio}}</td>


          {{/each}}
      </tbody>
      </tr>
      </tbody>

    </table>
    <hr>
      <h1 class="text-center">Total: {{total}}</h1>   

  </div>
  <div class="contenedor-qr">
    <div id="contenedorQR" class="contenedorQR"></div>
    <h1 class="text-center">Codigo Qr</h1>
  </div>
  <script type="text/javascript">
    var contenedorQR = document.getElementById('contenedorQR');

    var QR = new QRCode(contenedorQR);

    QR.makeCode('https://estudiante-cafetery.up.railway.app/pedido/%7B%7Bped.[0].folio%7D%7D');

  </script>

</html>